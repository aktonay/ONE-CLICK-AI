services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ project_name }}-prod
    ports:
      - "8000:8000"
    env_file:
      - .env
    environment:
      - DEBUG=false
      - WORKERS=4
    {% if context.get("postgres", False) or context.get("redis", False) or context.get("mongodb", False) %}
    depends_on:
    {% endif %}
      {% if context.get("postgres", False) %}
      postgres:
        condition: service_healthy
      {% endif %}
      {% if context.get("redis", False) %}
      redis:
        condition: service_healthy
      {% endif %}
      {% if context.get("mongodb", False) %}
      mongodb:
        condition: service_started
      {% endif %}
    restart: always
    deploy:
      resources:
        limits:
          memory: 2G
          cpus: "2.0"

  {% if context.get("docker", False) %}
  nginx:
    image: nginx:alpine
    container_name: {{ project_name }}-nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - app
    restart: always
  {% endif %}

  {% if context.get("postgres", False) %}
  postgres:
    image: postgres:16-alpine
    container_name: {{ project_name }}-postgres-prod
    environment:
      POSTGRES_DB: {{ project_name }}
      POSTGRES_USER: ${POSTGRES_USER:-postgres}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: always
  {% endif %}

  {% if context.get("redis", False) %}
  redis:
    image: redis:7-alpine
    container_name: {{ project_name }}-redis-prod
    command: redis-server --requirepass ${REDIS_PASSWORD:-changeme}
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: always
  {% endif %}

  {% if context.get("mongodb", False) %}
  mongodb:
    image: mongo:7
    container_name: {{ project_name }}-mongodb-prod
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${MONGO_USER:-admin}
      MONGO_INITDB_ROOT_PASSWORD: ${MONGO_PASSWORD}
    volumes:
      - mongo_data:/data/db
    restart: always
  {% endif %}

  {% if context.get("monitoring", False) %}
  prometheus:
    image: prom/prometheus:latest
    container_name: {{ project_name }}-prometheus
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus_data:/prometheus
    ports:
      - "9090:9090"
    restart: always

  grafana:
    image: grafana/grafana:latest
    container_name: {{ project_name }}-grafana
    ports:
      - "3001:3000"
    volumes:
      - grafana_data:/var/lib/grafana
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASSWORD:-admin}
    restart: always
  {% endif %}

volumes:
  {% if context.get("postgres", False) %}
  postgres_data:
  {% endif %}
  {% if context.get("redis", False) %}
  redis_data:
  {% endif %}
  {% if context.get("mongodb", False) %}
  mongo_data:
  {% endif %}
  {% if context.get("monitoring", False) %}
  prometheus_data:
  grafana_data:
  {% endif %}
