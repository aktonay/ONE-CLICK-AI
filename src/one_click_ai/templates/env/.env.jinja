# ── App ─────────────────────────────────────────────────────────────
APP_NAME={{ project_name }}
APP_VERSION=0.1.0
DEBUG=true
API_KEY=

# ── LLM Provider ──────────────────────────────────────────────────
LLM_PROVIDER={{ context.get("llm_provider", "openai") }}
LLM_MODEL={{ context.get("llm_model", "gpt-4o") }}

{% if context.get("openai", False) %}
# OpenAI
OPENAI_API_KEY=sk-your-key-here
{% endif %}
{% if context.get("anthropic", False) %}
# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here
{% endif %}
{% if context.get("google", False) %}
# Google
GOOGLE_API_KEY=your-key-here
{% endif %}
{% if context.get("groq", False) %}
# Groq
GROQ_API_KEY=gsk_your-key-here
{% endif %}
{% if context.get("grok", False) %}
# Grok (xAI)
GROK_API_KEY=xai-your-key-here
{% endif %}
{% if context.get("cohere", False) %}
# Cohere
COHERE_API_KEY=your-key-here
{% endif %}
{% if context.get("mistral", False) %}
# Mistral
MISTRAL_API_KEY=your-key-here
{% endif %}
{% if context.get("ollama", False) %}
# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
{% endif %}

{% if context.get("rag", False) %}
# ── RAG / Embeddings ──────────────────────────────────────────────
EMBEDDING_PROVIDER={{ context.get("embedding_provider", "openai") }}
EMBEDDING_MODEL={{ context.get("embedding_model", "text-embedding-3-small") }}
EMBEDDING_DIMENSION=1536
VECTOR_STORE={{ context.get("vector_store", "faiss") }}
FAISS_INDEX_DIR=data/vector_indexes
CHUNK_SIZE=512
CHUNK_OVERLAP=50
{% if context.get("pinecone", False) %}
PINECONE_API_KEY=your-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME={{ project_name }}-index
{% endif %}
{% if context.get("qdrant", False) %}
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION={{ project_name }}_docs
{% endif %}
{% if context.get("weaviate", False) %}
WEAVIATE_URL=http://localhost:8080
{% endif %}
{% if context.get("chroma", False) %}
CHROMA_HOST=localhost
CHROMA_PORT=8000
{% endif %}
{% if context.get("milvus", False) %}
MILVUS_HOST=localhost
MILVUS_PORT=19530
{% endif %}
{% endif %}

{% if context.get("voice", False) %}
# ── Voice ──────────────────────────────────────────────────────────
STT_PROVIDER=openai
TTS_PROVIDER=openai
{% if context.get("deepgram", False) %}
DEEPGRAM_API_KEY=your-key
{% endif %}
ELEVENLABS_API_KEY=your-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
{% endif %}

{% if context.get("vision", False) %}
# ── Vision ─────────────────────────────────────────────────────────
VISION_PROVIDER=openai
VISION_MODEL=gpt-4o
{% endif %}

{% if context.get("emotion", False) %}
# ── Emotion ────────────────────────────────────────────────────────
EMOTION_PROVIDER=hume
HUME_API_KEY=your-key
{% endif %}

{% if context.get("search", False) %}
# ── Web Search ─────────────────────────────────────────────────────
SEARCH_PROVIDER=tavily
TAVILY_API_KEY=tvly-your-key
SERPER_API_KEY=your-key
{% endif %}

{% if context.get("postgres", False) %}
# ── PostgreSQL ─────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/{{ project_name }}
{% endif %}
{% if context.get("mongodb", False) %}
# ── MongoDB ────────────────────────────────────────────────────────
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE={{ project_name }}
{% endif %}
{% if context.get("redis", False) %}
# ── Redis ──────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
{% endif %}

{% if context.get("session", False) %}
# ── Sessions ───────────────────────────────────────────────────────
SESSION_TTL=86400
MAX_SESSION_MESSAGES=100
{% endif %}

# ── Server ─────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
WORKERS=1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT=60
