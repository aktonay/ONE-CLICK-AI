#!/bin/bash
# Destroy infrastructure
set -e

echo "⚠️  Destroying infrastructure for {{ project_name }}..."
read -p "Are you sure? (y/N): " confirm
if [[ "$confirm" != "y" ]]; then
    echo "Cancelled."
    exit 0
fi

cd "$(dirname "$0")"
terraform destroy -auto-approve

echo "✅ Infrastructure destroyed."
