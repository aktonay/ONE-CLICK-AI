"""Custom exception classes."""

from fastapi import HTTPException


class AIProviderError(HTTPException):
    def __init__(self, detail: str = "AI provider error"):
        super().__init__(status_code=502, detail=detail)


class DocumentProcessingError(HTTPException):
    def __init__(self, detail: str = "Document processing failed"):
        super().__init__(status_code=422, detail=detail)


class VectorStoreError(HTTPException):
    def __init__(self, detail: str = "Vector store error"):
        super().__init__(status_code=500, detail=detail)


class SessionNotFoundError(HTTPException):
    def __init__(self, session_id: str):
        super().__init__(status_code=404, detail=f"Session '{session_id}' not found")


class RateLimitExceeded(HTTPException):
    def __init__(self):
        super().__init__(status_code=429, detail="Rate limit exceeded")
